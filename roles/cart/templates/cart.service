[Unit]
Description = Cart Service
[Service]
User=roboshop
Environment=REDIS_HOST="{{ lookup('aws_ssm', '{{ env }}.cart_service.host_redis', region='us-east-1' ) }}"
Environment=CATALOGUE_HOST="{{ lookup('aws_ssm', '{{ env }}.cart_service.host_catalogue', region='us-east-1' ) }}"
Environment=CATALOGUE_PORT="{{ lookup('aws_ssm', '{{ env }}.cart_service.port_catalogue', region='us-east-1' ) }}"
ExecStart=/bin/node /app/server.js
SyslogIdentifier=cart

[Install]
WantedBy=multi-user.target