[Unit]
Description=Shipping Service

[Service]
User=roboshop
Environment=CART_ENDPOINT="{{ lookup('aws_ssm', '{{ env }}.shipping_service.endpoint_cart', region='us-east-1' ) }}"
Environment=DB_HOST="{{ lookup('aws_ssm', '{{ env }}.shipping_service.host_mysql', region='us-east-1' ) }}"
ExecStart=/bin/java -jar /app/shipping.jar
SyslogIdentifier=shipping

[Install]
WantedBy=multi-user.target
