[Unit]
Description = User Service
[Service]
User=roboshop
Environment={{ lookup('aws_ssm', '{{ env }}.user_service.mongo', region='us-east-1' ) }}
Environment=REDIS_HOST={{ lookup('aws_ssm', '{{ env }}.user_service.host_redis', region='us-east-1' ) }}
Environment=MONGO_URL="{{ lookup('aws_ssm', '{{ env }}.user_service.host_mongo_url', region='us-east-1' ) }}"
ExecStart=/bin/node /app/server.js
SyslogIdentifier=user

[Install]
WantedBy=multi-user.target